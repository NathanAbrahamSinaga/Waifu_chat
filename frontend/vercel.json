{
    "version": 2,
    "builds": [
      {
        "src": "src/**/*",
        "use": "@vercel/svelte"
      },
      {
        "src": "public/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "https://waifu-chat.vercel.app"
      },
      {
        "src": "/(.*)",
        "dest": "/index.html"
      }
    ]
  }
  